<section>
  <div class="block product-section color-scheme-3">
    <div class="container">
      <div class="header-1">
        <h1>Latest Products</h1>
        <div class="header-bottom-line"></div>
      </div>
      <ul class="row list-unstyled" id="products">
        <% @products.last(4).each do |product|%>
          <li class="col-xs-12 col-sm-12 col-md-3 col-lg-3 text-center">
            <div class="product">
              <figure class="figure-hover-overlay">
               <% if product.on_sale? %>
               <div class="product-sale">sale</div>
                <% end %>
                <%= link_to product_path(product) do %>
                  <%= image_tag(product.ia + product.i2, class:"img-responsive", alt: "") %>
                <% end %>
                <span class="bar"></span>
              </figure>
              <div class="product-caption">
                <h4>
                <%= link_to product_path(product) do %>
                  <%= truncate(product.title, :length => 30) %>
                  <% end %>
                </h4>
                <p class="product-price">
                  <%= t('product.price') %>:
                  <%= number_to_currency(product.price) %>
                </p>
                <%=link_to product_path(product), class: "btn btn-danger" do%>Add To Cart<% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class=container-fluid">
    <div class="col-sm-12 text-center">
    <%= link_to products_path, class: "btn btn-danger" do%>Show All<% end %>
    </div>
    </div>
    </div>
</section>


