<section class="z-carousel">
  <div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
    <!-- Overlay -->
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#bs-carousel" data-slide-to="0" class="active"></li>
      <li data-target="#bs-carousel" data-slide-to="1"></li>
      <li data-target="#bs-carousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item slides active">
        <div class="slide-1">
          <div class="overlay"></div>
        </div>
        <div class="hero">
          <hgroup>
            <h1>WIDE RANGE of PRODUCTS</h1>
            <h3>for all seasons</h3>
          </hgroup>
          <%= link_to products_path(main_product_id: 1) do %>
            <button class="btn btn-hero btn-lg" role="button">SHOP NOW</button>
          <% end %>
        </div>
      </div>
      <div class="item slides">
        <div class="slide-2">
          <div class="overlay"></div>
        </div>
        <div class="hero">
          <hgroup>
            <h1>Fashion Stop</h1>
            <h3>Explore handpicked Collection</h3>
          </hgroup>
          <%= link_to products_path(main_product_id: 2) do %>
            <button class="btn btn-hero btn-lg" role="button">EXPLORE NOW</button>
          <% end %>
        </div>
      </div>
      <div class="item slides">
        <div class="slide-3">
          <div class="overlay"></div>
        </div>
        <div class="hero">
          <hgroup>
            <h1>Personalized Shopping</h1>
          </hgroup>
          <%= link_to products_path do %>
            <button class="btn btn-hero btn-lg" role="button">Get Started</button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
