<div class="z_carousel" data-component="IndexCarousel">
  <div class="carousel fade-carousel slide" data-ride="carousel" data-interval="4000" id="bs-carousel">
    <div class="carousel-inner">
      <div class="item slides active">
        <div class="slide-1">
          <div class="carousel-caption">
            <h3>Clothing &amp; Accessories</h3>
            <p>For head-turning looks to overhaul your wardrobe</p>
          </div>
        </div>
      </div>
      <div class="item slides">
        <div class="slide-2">
          <div class="carousel-caption">
            <h3>Shop Women’s Clothing Online</h3>
            <p>Find Easy Silhouettes and Structured Accents for Your Daily Fashion Fix</p>
          </div>
        </div>
      </div>
      <div class="item slides">
        <div class="slide-3">
          <div class="carousel-caption">
            <h3>Find Top Offers on Men’s Clothing</h3>
            <p>Unanchored to Season or Occasion</p>
          </div>
        </div>
      </div>
      <div class="item slides">
        <div class="slide-4">
          <div class="carousel-caption">
            <h3>Shop Kid’s Clothing Online</h3>
            <p>Everyday favorites for Your Little One</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

