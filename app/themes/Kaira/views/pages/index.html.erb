<section class="section products second-style z-margin " id="home-products" data-component="IndexLatest">
  <div class="container">
    <div class="row">
      <div class="col-sm-12 section-title text-center">
        <h3>
          <i class="line"></i>Latest Products
          <i class="line"></i>
        </h3>
      </div>
      <div class="container">
        <div class="row">
          <% @products.last(4).each do |product| %>
          <div class="col-md-3 col-sm-6">
            <div class="box">
              <%= image_tag(product.ia + product.i2, class:"img-responsive", alt: "") %>
              <div class="box-content">
                <ul class="z-icon">
                  <li>
                    <%= link_to product_path(product), class: "fa fa-shopping-cart" do %>
                    <% end %>
                  </li>
                </ul>
              </div>
              <h3 class="product-title">
                <%= link_to product_path(product) do %>
                Product Name
                <p>
                 <span class="amount">
                   SKU
                 </span>
               </p>
               <% end %>
             </h3>
           </div>
         </div>
         <% end %>
       </div>
     </div>
     <div class="col-sm-12 text-center">
      <%= link_to products_path ,class: "btn btn-info" do %>Show More
      <% end %>
    </div>
  </div>
</div>
</section>

