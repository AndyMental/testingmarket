<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<div class="input-group input-group-sm mb-4">
  <input type="search" placeholder="Product Name, SKU or any other details?" aria-describedby="button-addon5" class="form-control zform-control zborder" id="search_tags">
  <div class="input-group-append">
    <button id="search-btn" type="submit" class="btn btn-primary"><i class="fa fa-search"></i></button>
  </div>
</div>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
  $( function() {
    var availableTags = <%= raw @search_tags %>;
    $( "#search_tags" ).autocomplete({
      source: availableTags
    });
  } );
</script>