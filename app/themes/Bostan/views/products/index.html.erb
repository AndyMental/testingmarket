<%= render 'product_page_style2' %>
<%= render 'add_to_cart' %>
<%= render 'edit_item' %>
<script>
  $('#add_to_cart').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
    $('div[data-rel*="item_info_form"]').load('/carts/catalog_item_info?actn=additem&pid=' + button.data('pid'));
  })
  $('#update_item').on('show.bs.modal', function (event) {
    var button = $(event.relatedTarget) // Button that triggered the modal
    $('div[data-rel*="item_info_form"]').load('/carts/catalog_item_info?actn=updateitem&vid=' + button.data('vid') + '&pn=' + button.data('pn') + '&sqty=' + button.data('sqty') + '&sid=' + button.data('sid'));
  })
</script>