<header class="sticky-top">
  <nav class="navbar navbar-primary bg-white">
    <div class="container-fluid p-0">
      <div class="row w-100 m-0">
        <div class="col">
          <div class="form-row">
            <div class="col">
              <%= render 'pg_search' %>
            </div>
            <div class="col">
              <%= render 'pg_vendor_dropdown' %>
            </div>
          </div>
        </div>
        <div class="col-auto text-right">
          <%= render 'pg_itemsperpage' %>
        </div>
      </div>
    </div>
  </nav>
</header>
<div class="px-4">
  <div class="row">
    <div class="col">
      <div class="main my-2">
        <div class="mb-4">
          <%= render 'pagination' %>
        </div>
        <div class="container">
          <%= render 'catalog_items_2' %>
        </div>
      </div>
    </div>
    <div class="col-4 d-none d-lg-block">
      <% if current_user %>
        <div class="sidebar p-2 border-0" data-rel="cart_items">
          <%= render 'carts/cart_2' %>
        </div>
      <% else %>
        <div class="sidebar p-2 border-0">
          <h4 class="mt-5">Please <a href="<%= login_url %>" class="_logOn">Log In</a> in order to see the prices and being able to place an order.</h4>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
  $('#vendor_list').change(function() {
  window.location = $(this).find(":selected").data('edit-url');
  });
  $('#itemsPerPage').change(function() {
  window.location = $(this).find(":selected").data('edit-url');
  });
  $('#search-btn').click(function() {
  window.location = '<%= raw products_url(pi: "#{params[:pi].to_i + 1}", pz: "32", rg: "#{params[:rg]}", vid: "#{params[:vid]}") %>' + '&search=' + $('#search_tags').val();
  });
</script>