<div class="container">
  <div class="row justify-content-center mt-2 mb-3">
    <div class="col-sm-6 col-sm-offset-4">
      <h2 class="text-center">Forgot Password</h2>
      <hr>
      <%= form_with(url: url_for(:controller => 'sessions', :action => 'send_recovery_request'), method: "post") do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.hidden_field :ref_uri, value: request.env["HTTP_REFERER"] %>
          <%= f.submit "Recover Password", class: "btn btn-primary btn-block btn-lg" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "shared/links" %>
      </div>
    </div>
  </div>
</div>