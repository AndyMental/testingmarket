<div class="container">
  <div class="py-5 text-center">
    <h2>Orders</h2>
    <%= link_to "Return to Shopping", products_path %>
  </div>
  <div class="row">
    <% @orders.l.each_with_index do |order, index| %>
      <div class="col-6 col-sm-6 col-md-6 col-lg-3 col-xl-3">
        <div class="card-wrapper">
          <div id="sale_id_-<%= order.i %>" class="card text-center">
            <div class="face front">
              <div class="card-body">
                <h5 class="font-weight-bold mb-0"><%= link_to "PO# #{order.p}", order_details_path(sid: order.i) %></h5>
                <p>
                  <%= order.do.to_date.strftime('%a, %e %b %Y') %><br>
                  <%= order.v %><br>
                  <%= number_to_currency(order.a) %>
                </p>
                <%= link_to "Review Order", order_details_path(sid: order.i), class: "badge badge-primary" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>