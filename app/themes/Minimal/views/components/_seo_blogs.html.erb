<% unless @blog_seo_option.nil? %>
    <!-- SEO Blog Meta Tags -->
    <title><%= @blog_seo_option.title %></title>
    <meta name="description" content="<%= @blog_seo_option.description %>" />
    <meta name="keywords" content="<%= @blog_seo_option.keywords %>">
    <!-- Schema.org markup for Google+ -->
    <meta itemprop="name" content="<%= @blog_seo_option.google_name %>">
    <meta itemprop="description" content="<%= @blog_seo_option.google_description %>">
    <meta itemprop="image" content="<%= @blog_seo_option.google_image %>">
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="<%= @blog_seo_option.twitter_handle  %>">
    <meta name="twitter:title" content="<%= @blog_seo_option.twitter_title %>">
    <meta name="twitter:description" content="<%= @blog_seo_option.twitter_description %>">
    <meta name="twitter:creator" content="<%= @blog_seo_option.twitter_creator %>">
    <meta name="twitter:image:src" content="<%= @blog_seo_option.twitter_image %>">
    <!-- Open Graph data -->
    <meta property="og:title" content="<%= @blog_seo_option.facebook_title %>" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="<%= request.url %>" />
    <meta property="og:image" content="<%= @blog_seo_option.facebook_image %>" />
    <meta property="og:description" content="<%= @blog_seo_option.facebook_description %>" />
    <meta property="article:published_time" content="<%= @blog_seo_option.facebook_published_time %>" />
    <meta property="article:modified_time" content="<%= @blog_seo_option.facebook_modified_time %>" />
    <meta property="article:section" content="<%= @blog_seo_option.facebook_section %>" />
    <meta property="article:tag" content="<%= @blog_seo_option.facebook_tag %>" />
    <meta property="fb:admins" content="<%= @blog_seo_option.facebook_app_id %>" />
    <% end %>
    <%= csrf_meta_tags %>
    <% unless @seo_option_code.nil? %>
    <% unless @seo_option_code.google_analytics_tracking.empty? %>
      <!-- Global Site Tag (gtag.js) - Google Analytics -->
      <script async src="https://www.googletagmanager.com/gtag/js?id=UA-85549111-1"></script>
      <script>
        window.dataLayer = window.dataLayer || [];
                        function gtag(){dataLayer.push(arguments);}
                        gtag('js', new Date());
                        gtag('config', '<%= @seo_option_code.google_analytics_tracking %>');
      </script>
    <% end %>
    <%= raw @seo_option_code.head_code %>
<% end %>