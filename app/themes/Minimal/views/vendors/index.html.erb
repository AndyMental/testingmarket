<%= tag.div class: 'hero-wrap hero-bread', style: "background-image: url('#{image_path('Minimal/colors.jpg')}')" do %>
  <div class="container">
    <div class="row no-gutters slider-text align-items-center justify-content-center">
      <div class="col-md-9 ftco-animate text-right fadeInUp ftco-animated">
        <h1 class="mb-0 bread">Brands</h1>
        <p>From personal accessories to home decor, we have the perfect items for your store. </p>
      </div>
    </div>
  </div>
<% end %>
<section class="p-4">
  <div class="container-fluid">
    <% @vendors.each_slice(4).with_index do |vendors, id | %>
      <div class="row">
        <% vendors.each_with_index do |vendor, index| %>
          <% if vendor.vimg == "" || vendor.vimg == nil %>
            <!-- Card without Img -->
            <div class="col-6 col-sm-6 col-md-6 col-lg-3 col-xl-3">
              <div class="card-wrapper">
                <div id="card-<%= id %><%= index %>" class="card card-rotating text-center">
                  <div class="face front">
                    <div class="card-body">
                      <h4 class="font-weight-bold mb-0"><%= vendor.n %></h4>
                      <%= vendor.vid %>
                      <p class="ztext-ellipsis">
                        <%= vendor.d %>
                      </p>
                      <%= link_to "Explore Products", products_path(pi: "1", pz: "32", search: "", rg: "", vid: "#{vendor.vid}"), class: "badge badge-primary" %>
                      <a href="products.html" class="badge badge-secondary">Catalogs</a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% else %>
            <!-- Card with Img -->
            <div class="col-6 col-sm-6 col-md-6 col-lg-3 col-xl-3">
              <div class="card-wrapper">
                <div id="card-<%= id %><%= index %>" class="card card-rotating text-center">
                  <div class="face front">
                    <div class="card-up">
                      <%= image_tag(vendor.vimg, alt: vendor.n, class: "card-img-top z-img") %>
                    </div>
                    <div class="card-body d-flex flex-column">
                      <%= link_to "Explore Products", products_path(pi: "1", pz: "32", search: "", rg: "", vid: "#{vendor.vid}"), class: "badge badge-primary" %>
                      <button type="button" class="mt-1 rotate-btn font-weight-bold" data-card="card-1" onclick="flip('card-<%= id %><%= index %>')">More Info</button>
                    </div>
                  </div>
                  <div class="face back">
                    <div class="card-up">
                      <h4 class="font-weight-bold mb-0"><%= vendor.n %></h4>
                      <p class="ztext-ellipsis">
                        <%= vendor.d %>
                      </p>
                    </div>
                    <div class="card-body d-flex flex-column">
                      <a href="products.html" class="badge badge-secondary">Catalogs</a>  
                      <button type="button" class="mt-1 rotate-btn font-weight-bold" data-card="card-1" onclick="flip('card-<%= id %><%= index %>')"> &lt;&lt; Back</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>