<p id="notice"><%= notice %></p>

<h1>Vendors</h1>

<table>
  <thead>
    <tr>
      <th>Vid</th>
      <th>N</th>
      <th>Mo</th>
      <th>Mr</th>
      <th>D</th>
      <th>Pt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.vid %></td>
        <td><%= vendor.n %></td>
        <td><%= vendor.mo %></td>
        <td><%= vendor.mr %></td>
        <td><%= vendor.d %></td>
        <td><%= vendor.pt %></td>
        <td><%= link_to 'Show', vendor %></td>
        <td><%= link_to 'Edit', edit_vendor_path(vendor) %></td>
        <td><%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

