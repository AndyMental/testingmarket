<div class="container">
  <div class="row justify-content-center mt-2 mb-3">
    <div class="col-sm-8 col-sm-offset-4">
      <h2 class="text-center">Sign Up</h2>
      <hr>
      <%= form_with(url: url_for(:controller => 'sessions', :action => 'send_registration_request'), method: "post") do |f| %>
        <div class="row mb-2">
          <div class="form-group col">
            <%= f.text_field :fname, autofocus: true, placeholder: 'First Name', class: 'form-control form-control-sm' %>
          </div>
          <div class="form-group col">
            <%= f.text_field :lname, placeholder: 'Last Name', class: 'form-control form-control-sm' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.text_field :tel, placeholder: 'Phone Number', class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= f.email_field :email, autocomplete: "off", placeholder: 'Email Address', class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= f.text_field :company, placeholder: 'Company', class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= f.text_field :taxid, placeholder: 'Fedral Tax ID', class: 'form-control form-control-sm' %>
        </div>
        <div class="form-group">
          <%= f.text_field :addr, placeholder: 'Business Address', class: 'form-control form-control-sm' %>
        </div>
        <div class="row mb-2">
          <div class="form-group col">
            <%= f.text_field :city, placeholder: 'City', class: 'form-control form-control-sm' %>
          </div>
          <div class="form-group col">
            <%= f.text_field :state, placeholder: 'State', class: 'form-control form-control-sm' %>
          </div>
          <div class="form-group col">
            <%= f.text_field :zip, placeholder: 'Zip Code', class: 'form-control form-control-sm' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.hidden_field :ref_uri, value: request.env["HTTP_REFERER"] %>
          <%= f.submit "Signup Now", class: "btn btn-primary btn-block btn-lg" %>
        </div>
      <% end %>
      <div class="text-center">
        <%= render "shared/links" %>
      </div>
    </div>
  </div>
</div>